<%= form_for @contact, url: {action: "create"} do |opp| %>
    <div class="panel panel-default">
        <div class="panel-heading">Contacts - new record</div>
        <dl class="dl-horizontal">
            <dt><%= label_tag(:email) %></dt>
            <dd><%= opp.text_field :email %></dd>
            <dt><%= label_tag(:first_name) %></dt>
            <dd><%= opp.text_field :first_name %></dd>
            <dt><%= label_tag(:last_name) %></dt>
            <dd><%= opp.text_field :last_name %></dd>
            <dd><%= opp.hidden_field(:opp_id, :value => @opp_id) %></dd>
        </dl>
    </div>
    <%= button_tag "Create", {class: "btn btn-primary opp submit", :method => "post"} %>
<% end %>
<%= button_to "To list", {action: "list", :opp_id => @opp_id}, {class: "btn btn-primary opp cancel", :method => "get"} %>



